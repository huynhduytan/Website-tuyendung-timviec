                            </div>
                            @if (ListJobsRecent.Count > 10)
                            {
                                <div class="browse-all-cat">
                                    <a href="@Url.Action("ListJobs", "RecruitJob", new { type = JobHunt.BU.Common.Enum.EnumTypeJob.Hot })" title="" class="style2">Xem nhiều hơn</a>
                                </div>
                            }
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

