<section id="scroll-here">
    <div class="block">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="heading">
                        <h2>Danh Mục Phổ Biến</h2>
                        <span>37 việc làm trực tiếp - 0 thêm vào ngày hôm nay.</span>
                    </div><!-- Heading -->

                    <div class="cat-sec">
                        <div class="row no-gape">
                            @if (Careers.Count > 0)
                            {
                                var careerCount = 1;
                                foreach (var career in Careers.Take(8))
                                {
                                    switch (careerCount)
                                    {
                                        case 4:
                                            careerClass = "border-top-left";
                                            break;
                                        case 5:
                                            careerClass = "border-bottom";
                                            break;
                                        default:
                                            careerClass = "";
                                            break;
                                    }
                                    <div class="col-lg-3 col-md-3 col-sm-6">
                                        <div class="p-category">
                                            <a href="@Url.Action("ListJobs","RecruitJob",new { idcareer = career.CareerId})" title="@career.CareerName" class="@careerClass">
                                                <i class="@career.Icon"></i>
                                                <span>@career.CareerName</span>
                                                <p>(@career.CountJob công việc)</p>
                                            </a>
                                        </div>
                                    </div>
                                    careerCount++;
                                }
                            }
